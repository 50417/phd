import clgen

from clgen import cli
from clgen import corpus
from clgen import log

__description__ = """
Extract and print corpus vocabulary.
"""

def atomizer(path, vocab, size=False):
    with open(clgen.must_exist(path)) as infile:
        data = infile.read()
    atoms = corpus.atomize(data, vocab=vocab)

    if size:
        log.info("size:", len(atoms))
    else:
        log.info('\n'.join(atoms))


def main():
    parser = cli.ArgumentParser(description=__description__)
    parser.add_argument('input', help='path to input text file')
    parser.add_argument('-t', '--type', type=str, default='char',
                        help='vocabulary type')
    parser.add_argument('-s', '--size', action="store_true",
                        help="print vocabulary size")
    args = parser.parse_args()

    opts = {
        "path": args.input,
        "vocab": args.type,
        "size": args.size
    }
    cli.main(atomizer, **opts)


if __name__ == '__main__':
    main()
