import clgen
from clgen import cli
from clgen.model import Model

__description__ = """
Train a CLgen model.
"""

def do_train(model_path: str):
    model_json = clgen.load_json_file(model_path)
    model = Model.from_json(model_json)

    model.train()
    print("done.")


def main():
    parser = cli.ArgumentParser(description=__description__)
    parser.add_argument("model", metavar="<model>",
                        help="path to model dist or specification file")
    args = parser.parse_args()

    cli.main(do_train, args.model)


if __name__ == "__main__":
    main()
