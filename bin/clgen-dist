import clgen
from clgen import cli
from clgen import log
from clgen import model

__description__ = """
Package CLgen model for distribution.
"""


def main():
    parser = cli.ArgumentParser(description=__description__)
    parser.add_argument("model", metavar="<model>",
                        help="path to model specification file")
    parser.add_argument("distname", metavar="<distname>",
                        help="name of dist file")
    parser.add_argument("--author", type=str, default=None,
                        help="Name of author (default: {})".format(
                            model.get_default_author()))
    args = parser.parse_args()

    m = cli.main(model.from_json, clgen.load_json_file(args.model))
    outpath = cli.main(m.to_dist, args.distname, author=args.author)
    log.info("created dist model:", outpath)


if __name__ == "__main__":
    main()
